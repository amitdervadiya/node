<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>SeoDash Free Bootstrap Admin Template by Adminmart</title>
    <link rel="shortcut icon" type="image/png" href="../assets/images/logos/seodashlogo.png" />
    <link rel="stylesheet" href="../../node_modules/simplebar/dist/simplebar.min.css">
    <link rel="stylesheet" href="../assets/css/styles.min.css" />
</head>
<style>
    .admin-card {
    transition: transform 0.3s, box-shadow 0.3s;
    border: 1px solid #e0e0e0;
    border-radius: 15px;
    overflow: hidden;
    background-color: #f9f9f9;
}

.admin-card:hover {
    transform: scale(1.05);
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
}

.admin-image {
    height: 80px;
    width: 80px;
    object-fit: cover;
    border: 2px solid #007bff;
    padding: 2px;
}

.card-title {
    font-size: 1.2rem;
}

.btn-edit {
    background-color: #007bff;
    border: none;
}

.btn-edit:hover {
    background-color: #0056b3;
}

.btn-delete {
    background-color: #dc3545;
    border: none;
}

.btn-delete:hover {
    background-color: #b02a37;
}

</style>
<body>
    <!--  Body Wrapper -->
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
        data-sidebar-position="fixed" data-header-position="fixed">
        <!-- Sidebar Start -->
        <%- include('./parsials/sidebar')%>
            <!--  Sidebar End -->
            <!--  Main wrapper -->
            <div class="body-wrapper">
                <!--  Header Start -->
                <%- include('./parsials/header')%>
                    <!--  Header End -->
                    <div class="container mt-5">
                        <h5 class="fw-semibold mb-4">Admins</h5>
                        <div class="row gap-3">
                            <% admins.map((admin)=> { %>
                            <div class="card col-12 col-sm-6 col-md-4 col-lg-3 shadow-sm p-3 mb-5 bg-white rounded admin-card">
                                <div class="card-body text-center">
                                    <img src="<%=admin.img%>" class="rounded-circle mb-3 admin-image" alt="Admin Image">
                                    <h5 class="card-title mb-1 fw-bold text-primary">
                                        <%=admin.fname%>
                                    </h5>
                                    <p class="text-muted mb-2">
                                        <i class="bi bi-envelope"></i> <%=admin.email%>
                                    </p>
                                    <p class="text-muted mb-1">
                                        <strong>Password:</strong> <%=admin.password%>
                                    </p>
                                    <p class="text-muted mb-1">
                                        <strong>Languages:</strong> <%=admin.languages%>
                                    </p>
                                    <p class="text-muted mb-1">
                                        <strong>City:</strong> <%=admin.city%>
                                    </p>
                                    <p class="text-muted mb-1">
                                        <strong>Gender:</strong> <%=admin.gender%>
                                    </p>
                                    <p class="text-muted mb-3">
                                        <strong>D.O.B.:</strong> <%=admin.dob%>
                                    </p>
                                    <div class="d-flex justify-content-center gap-2">
                                        <button class="btn btn-primary btn-sm btn-edit"   onclick="editAdmin('<%=admin.id%>')">
                                            <i class="bi bi-pencil"></i> Edit
                                        </button>
                                        <button class="btn btn-danger btn-sm btn-delete"    onclick="deleteAdmin('<%=admin.id%>')">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                        </div>
                    </div>
                    

            </div>
    </div>
    <script>
        function editAdmin(adminId) {
            window.location.pathname = `/edit/${adminId}`
          
        }

        function deleteAdmin(adminId) {
            window.location.pathname = `/delete/${adminId}`
         
        }
    </script>
    <script src="../assets/libs/jquery/dist/jquery.min.js"></script>
    <script src="../assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="../assets/libs/simplebar/dist/simplebar.js"></script>
    <script src="../assets/js/sidebarmenu.js"></script>
    <script src="../assets/js/app.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
</body>

</html>